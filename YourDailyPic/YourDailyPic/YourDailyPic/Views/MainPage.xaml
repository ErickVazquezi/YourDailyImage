<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YourDailyPic.Views.MainPage"
             Title="Your Daily Image">
    <ContentPage.Content>
        <StackLayout
            BackgroundColor="Purple">
            <Label
                Margin="0,20,0,0"
                Text="Your Daily Image"
                HorizontalOptions="CenterAndExpand" />
                <Frame
                    Margin="20,20,20,0"
                    HasShadow="True"
                    CornerRadius="8"
                    Padding="0">
                    <Image
                        Source="{Binding ImageSource}"
                        Aspect="AspectFill"
                        WidthRequest="50"
                        HeightRequest="400"
                        BackgroundColor="Aqua">
                </Image>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>